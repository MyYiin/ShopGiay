@model IEnumerable<ShopGiay.Models.Thuonghieu>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Danh sách thương hiệu</h2>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm thương hiệu mới
        </a>
    </div>

    <table class="table table-bordered table-striped align-middle">
        <thead class="table-info">
            <tr>
                <th style="width: 70%">Tên thương hiệu</th>
                <th style="width: 30%" class="text-center">Thao tác</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-semibold">
                        @Html.DisplayFor(modelItem => item.Ten)
                    </td>

                    <td class="text-center">

                        <a asp-action="Edit" asp-route-id="@item.MaTh" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.MaTh" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash3"></i> Xóa
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>