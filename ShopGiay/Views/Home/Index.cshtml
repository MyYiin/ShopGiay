@using ShopGiay.Enums
@using ShopGiay.Models;
@model IEnumerable<ShopGiay.Models.Hoadon>

@{
    ViewData["Title"] = "Trang Quản Trị";
}


<div class="container-fluid">
    <h2 class="mb-4">Dashboard - Tổng Quan Hệ Thống</h2>

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Sản phẩm</h6>
                            <h2 class="mb-0">@ViewBag.TongSanPham</h2>
                        </div>
                        <div>
                            <i class="bi bi-box-seam" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white bg-opacity-25">
                    <a asp-controller="Mathangs" asp-action="Index" class="text-white text-decoration-none">
                        <small>Xem chi tiết <i class="bi bi-arrow-right"></i></small>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Đơn hàng</h6>
                            <h2 class="mb-0">@ViewBag.TongHoaDon</h2>
                        </div>
                        <div>
                            <i class="bi bi-cart-check" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white bg-opacity-25">
                    <a asp-controller="Hoadons" asp-action="Index" class="text-white text-decoration-none">
                        <small>Xem chi tiết <i class="bi bi-arrow-right"></i></small>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Khách hàng</h6>
                            <h2 class="mb-0">@ViewBag.TongKhachHang</h2>
                        </div>
                        <div>
                            <i class="bi bi-people" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white bg-opacity-25">
                    <small>Tổng khách hàng đã đăng ký</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase">Doanh thu</h6>
                            <h2 class="mb-0">@ViewBag.TongDoanhThu.ToString("N0")</h2>
                        </div>
                        <div>
                            <i class="bi bi-currency-dollar" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white bg-opacity-25">
                    <small>Tổng doanh thu (VNĐ)</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu quản trị -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0 text-white"><i class="bi bi-grid-3x3-gap"></i> Quản Lý Hệ Thống</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Mathangs" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-box-seam fs-3 d-block mb-2"></i>
                                <strong>Quản lý Sản phẩm</strong>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Loaigiays" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-tags fs-3 d-block mb-2"></i>
                                <strong>Quản lý Loại Giày</strong>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Thuonghieus" asp-action="Index" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-tags fs-3 d-block mb-2"></i>
                                <strong>Quản lý Thương Hiệu</strong>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Hoadons" asp-action="Index" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-receipt fs-3 d-block mb-2"></i>
                                <strong>Quản lý Đơn hàng</strong>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Nhanviens" asp-action="Index" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-person-badge fs-3 d-block mb-2"></i>
                                <strong>Quản lý Nhân viên</strong>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Tonkhos" asp-action="Index" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-person-badge fs-3 d-block mb-2"></i>
                                <strong>Tồn Kho</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Bộ lọc trạng thái -->
    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Tất cả</a>

        <a asp-action="Index" asp-route-trangThai="@((int)Status.ChoXuLy)" class="btn btn-warning">
            Chờ xử lý
        </a>

        <a asp-action="Index" asp-route-trangThai="@((int)Status.DaXacNhan)" class="btn btn-info">
            Đã xác nhận
        </a>

        <a asp-action="Index" asp-route-trangThai="@((int)Status.DangGiaoHang)" class="btn btn-primary">
            Đang giao hàng
        </a>

        <a asp-action="Index" asp-route-trangThai="@((int)Status.HoanThanh)" class="btn btn-success">
            Hoàn thành
        </a>

        <a asp-action="Index" asp-route-trangThai="@((int)Status.DaHuy)" class="btn btn-danger">
            Đã hủy
        </a>
    </div>

    <!-- Bảng danh sách -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã HĐ</th>
                <th>Khách hàng</th>
                <th>Ngày</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>#@item.MaHd</strong></td>

                    <td>@item.MaKhNavigation?.Ten</td>

                    <td>@item.Ngay?.ToString("dd/MM/yyyy HH:mm")</td>

                    <td class="text-danger fw-bold">
                        @item.TongTien?.ToString("N0") đ
                    </td>

                    <td>
                        @switch (item.TrangThai)
                        {
                            case Status.ChoXuLy:
                                <span class="badge bg-warning">Chờ xử lý</span>
                                break;

                            case Status.DaXacNhan:
                                <span class="badge bg-info">Đã xác nhận</span>
                                break;

                            case Status.DangGiaoHang:
                                <span class="badge bg-primary">Đang giao hàng</span>
                                break;

                            case Status.HoanThanh:
                                <span class="badge bg-success">Hoàn thành</span>
                                break;

                            case Status.DaHuy:
                                <span class="badge bg-danger">Đã hủy</span>
                                break;
                        }
                    </td>

                    <td>
                        <a asp-action="Details"
                           asp-route-id="@item.MaHd"
                           class="btn btn-sm btn-info mb-1">
                            <i class="bi bi-eye"></i> Xem
                        </a>

                        @* Nút thay đổi trạng thái *@
                        @if (item.TrangThai == Status.ChoXuLy)
                        {
                            <button class="btn btn-sm btn-success mb-1"
                                    onclick="changeStatus(@item.MaHd, @((int)Status.DaXacNhan))">
                                Xác nhận
                            </button>

                            <button class="btn btn-sm btn-danger mb-1"
                                    onclick="cancelOrder(@item.MaHd)">
                                Hủy
                            </button>
                        }
                        else if (item.TrangThai == Status.DaXacNhan)
                        {
                            <button class="btn btn-sm btn-primary mb-1"
                                    onclick="changeStatus(@item.MaHd, @((int)Status.DangGiaoHang))">
                                Giao hàng
                            </button>

                            <button class="btn btn-sm btn-danger mb-1"
                                    onclick="cancelOrder(@item.MaHd)">
                                Hủy
                            </button>
                        }
                        else if (item.TrangThai == Status.DangGiaoHang)
                        {
                            <button class="btn btn-sm btn-success mb-1"
                                    onclick="changeStatus(@item.MaHd, @((int)Status.HoanThanh))">
                                Hoàn thành
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Token -->
    <form id="tokenForm">
        @Html.AntiForgeryToken()
    </form>

    <!-- Modal xác nhận chuyển trạng thái -->
    <div class="modal fade" id="confirmModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fa fa-question-circle me-2"></i>
                        Xác nhận
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="confirmMessage" class="mb-0"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i> Hủy
                    </button>
                    <button type="button" class="btn btn-primary" id="confirmBtn">
                        <i class="fa fa-check me-1"></i> Xác nhận
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal nhập lý do hủy -->
    <div class="modal fade" id="cancelModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fa fa-ban me-2"></i>
                        Hủy đơn hàng
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <label class="form-label fw-semibold">Lý do hủy đơn:</label>
                    <textarea class="form-control" id="cancelReason" rows="3" placeholder="Nhập lý do hủy..."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i> Đóng
                    </button>
                    <button type="button" class="btn btn-danger" id="cancelConfirmBtn">
                        <i class="fa fa-ban me-1"></i> Xác nhận hủy
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Message Container -->
    <div id="alertContainer" style="position: fixed; top: 80px; left: 50%; transform: translateX(-50%); z-index: 9999; width: 500px; max-width: 90%;"></div>

    <script>
        let currentOrderId = null;
        let currentStatus = null;

        // Hiển thị alert message
        function showAlert(message, isSuccess) {
            const alertType = isSuccess ? 'success' : 'danger';
            const icon = isSuccess ? 'check-circle' : 'exclamation-circle';

            const alertHtml = `
                <div class="alert alert-${alertType} alert-dismissible fade show shadow-lg" role="alert">
                    <i class="fa fa-${icon} me-2"></i>
                    <strong>${message}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

            const container = document.getElementById('alertContainer');
            container.innerHTML = alertHtml;

            // Tự động ẩn sau 4 giây
            setTimeout(() => {
                const alert = container.querySelector('.alert');
                if (alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 4000);
        }

        // Hiển thị modal xác nhận
        function changeStatus(orderId, status) {
            currentOrderId = orderId;
            currentStatus = status;

            const statusText = {
                1: 'xác nhận',
                2: 'chuyển sang giao hàng',
                3: 'hoàn thành'
            };

            document.getElementById('confirmMessage').textContent =
                `Bạn có chắc chắn muốn ${statusText[status]} đơn hàng này?`;

            const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
            modal.show();
        }

        // Xử lý khi nhấn nút xác nhận trong modal
        document.getElementById('confirmBtn').addEventListener('click', function () {
            const modal = bootstrap.Modal.getInstance(document.getElementById('confirmModal'));
            modal.hide();

            console.log('Changing status:', { orderId: currentOrderId, status: currentStatus });

            const token = document.querySelector("input[name='__RequestVerificationToken']").value;

            fetch('@Url.Action("ChangeStatus", "Hoadons")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${currentOrderId}&trangThai=${currentStatus}&__RequestVerificationToken=${encodeURIComponent(token)}`
            })
            .then(res => {
                console.log('Response status:', res.status);
                return res.json();
            })
            .then(data => {
                console.log('Response data:', data);
                showAlert(data.message, data.success);
                if (data.success) {
                    setTimeout(() => location.reload(), 1500);
                }
            })
            .catch(err => {
                console.error('Error:', err);
                showAlert('Có lỗi xảy ra: ' + err.message, false);
            });
        });

        // Hiển thị modal hủy đơn
        function cancelOrder(orderId) {
            currentOrderId = orderId;
            document.getElementById('cancelReason').value = '';

            const modal = new bootstrap.Modal(document.getElementById('cancelModal'));
            modal.show();
        }

        // Xử lý khi nhấn nút xác nhận hủy
        document.getElementById('cancelConfirmBtn').addEventListener('click', function () {
            const reason = document.getElementById('cancelReason').value.trim();

            if (!reason) {
                showAlert('Vui lòng nhập lý do hủy đơn!', false);
                return;
            }

            const modal = bootstrap.Modal.getInstance(document.getElementById('cancelModal'));
            modal.hide();

            console.log('Canceling order:', { orderId: currentOrderId, reason });

            const token = document.querySelector("input[name='__RequestVerificationToken']").value;

            fetch('@Url.Action("CancelOrder", "Hoadons")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${currentOrderId}&reason=${encodeURIComponent(reason)}&__RequestVerificationToken=${encodeURIComponent(token)}`
            })
            .then(res => {
                console.log('Response status:', res.status);
                return res.json();
            })
            .then(data => {
                console.log('Response data:', data);
                showAlert(data.message, data.success);
                if (data.success) {
                    setTimeout(() => location.reload(), 1500);
                }
            })
            .catch(err => {
                console.error('Error:', err);
                showAlert('Có lỗi xảy ra: ' + err.message, false);
            });
        });
    </script>
