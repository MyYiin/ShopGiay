@model ShopGiay.Models.Khachhang

@{
    ViewData["Title"] = "Chỉnh sửa Khách hàng";
    Layout = "_LayoutAdmin"; 
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 mb-4">
            <h1 class="h3 mb-0 text-gray-800">Chỉnh sửa Khách hàng</h1>
            <p class="text-muted">Cập nhật thông tin chi tiết của khách hàng.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user-edit"></i> Form Chỉnh sửa Khách hàng
                    </h6>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="MaKh" />

                        <div class="form-group row mb-3">
                            <label asp-for="Ten" class="col-sm-3 col-form-label"><i class="fas fa-id-badge"></i> @Html.DisplayNameFor(model => model.Ten)</label>
                            <div class="col-sm-9">
                                <input asp-for="Ten" class="form-control" />
                                <span asp-validation-for="Ten" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="DienThoai" class="col-sm-3 col-form-label"><i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.DienThoai)</label>
                            <div class="col-sm-9">
                                <input asp-for="DienThoai" class="form-control" />
                                <span asp-validation-for="DienThoai" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label asp-for="Email" class="col-sm-3 col-form-label"><i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)</label>
                            <div class="col-sm-9">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            <label asp-for="MatKhau" class="col-sm-3 col-form-label"><i class="fas fa-lock"></i> @Html.DisplayNameFor(model => model.MatKhau)</label>
                            <div class="col-sm-9">
                                <input asp-for="MatKhau" class="form-control" type="password" placeholder="Nhập mật khẩu mới (để trống nếu không đổi)" />
                                <span asp-validation-for="MatKhau" class="text-danger small"></span>
                                <small class="form-text text-muted">Để trống trường này nếu bạn không muốn thay đổi mật khẩu.</small>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Lưu Thay Đổi
                                </button>
                                <a asp-action="Index" class="btn btn-secondary ml-2">
                                    <i class="fas fa-arrow-left"></i> Quay lại Danh sách
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}