@model ShopGiay.Models.Hoadon
@{
    ViewData["Title"] = "Thanh toán thành công";
}

<div class="container mt-4">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Đặt hàng thành công!</h4>
        <p>Cảm ơn bạn đã mua sắm tại Shop Giày MYiin. Đơn hàng của bạn đã được tiếp nhận và sẽ được xử lý sớm nhất.</p>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Thông tin hóa đơn</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Mã hóa đơn:</strong> #@Model.MaHd
                </div>
                <div class="col-md-6">
                    <strong>Ngày đặt hàng:</strong> @Model.Ngay?.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Khách hàng:</strong> @Model.MaKhNavigation?.Ten
                </div>
                <div class="col-md-6">
                    <strong>Email:</strong> @Model.MaKhNavigation?.Email
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Điện thoại:</strong> @Model.MaKhNavigation?.DienThoai
                </div>
            </div>

            <hr />

            <h6 class="mb-3">Chi tiết đơn hàng:</h6>
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>STT</th>
                        <th>Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int stt = 1;
                        int tongtien = 0;
                    }
                    @foreach (var item in Model.Cthoadons)
                    {
                        var thanhtien = (item.DonGia ?? 0) * (item.SoLuong ?? 0);
                        tongtien += thanhtien;
                        <tr>
                            <td>@(stt++)</td>
                            <td>@item.MaMhNavigation?.Ten</td>
                            <td>@((item.DonGia ?? 0).ToString("N0")) đ</td>
                            <td>@(item.SoLuong ?? 0)</td>
                            <td>@(thanhtien.ToString("N0")) đ</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-info">
                        <td colspan="4" class="text-end fw-bold">Tổng tiền:</td>
                        <td class="fw-bold text-danger">@((Model.TongTien ?? 0).ToString("N0")) đ</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-primary">Tiếp tục mua sắm</a>
    </div>
</div>

