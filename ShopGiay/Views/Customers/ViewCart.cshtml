@model List<ShopGiay.Models.CartItem>
@{
    ViewData["Title"] = "ViewCart";
}


<br />
<h3>Giỏ hàng của bạn</h3>

@if (Model.Count > 0)
{
    int stt = 1;        // số thứ tự
    int thanhtien = 0;     // thành tiền
    int tongtien = 0;      // tổng tiền

    <table class="table">
        <tr>
            <th>STT</th>
            <th>Sản phẩm</th>
            <th>Màu sắc</th>
            <th>Kích cỡ</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
        @foreach (var i in Model)
        {
            thanhtien = i.MatHang.GiaBan * i.SoLuong ?? 1;
            tongtien += thanhtien;
            <tr class="align-middle">
                <td>@(stt++)</td>
                <td>
                    <img src="~/images/products/@(i.MatHang.HinhAnh)" class="img-thumbnail" width="50" />
                    @(i.MatHang.Ten)
                </td>
                <td><span class="badge bg-info">@i.MauSac</span></td>
                <td><span class="badge bg-secondary">@i.KichCo</span></td>
                <td>@(i.MatHang.GiaBan?.ToString("N0")) đ</td>
                <td>
                    <form asp-action="UpdateItem" method="post">
                        <div class="row">
                            <div class="col">
                                <input name="tonkhoId" type="hidden" value="@(i.TonkhoId)" />
                                <input name="maMs" type="hidden" value="@(i.MaMs)" />
                                <input name="maKc" type="hidden" value="@(i.MaKc)" />
                                <input name="quantity" type="number" value="@(i.SoLuong)" class="form-control" min="1" />
                            </div>
                            <div class="col">
                                <input class="btn btn-warning" type="submit" value="Cập nhật" />
                            </div>
                        </div>
                    </form>
                </td>
                <td>@(thanhtien.ToString("N0")) đ</td>
                <td>
                    <a asp-action="RemoveItem" asp-route-tonkhoId="@i.TonkhoId" asp-route-maMs="@i.MaMs" asp-route-maKc="@i.MaKc"
                       class="text-danger">Xóa</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="4" class="text-end">Thành tiền</td>
            <td colspan="2">
                <strong class="text
            danger">@(tongtien.ToString("N0")) đ</strong>
            </td>
        </tr>
    </table>
    <div class="text-end">
        <a class="btn btn-info" asp-action="CheckOut">Thanh toán</a>
    </div>
}
else
{
    <p class="alert alert-danger">Giỏ hàng rỗng!</p>
}

