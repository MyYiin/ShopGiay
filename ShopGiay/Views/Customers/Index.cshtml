@model IEnumerable<ShopGiay.Models.Mathang>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách các sản phẩm</h1>

<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col mb-5">
            <div class="card h-100">
                <!-- Sale badge-->
                <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Giảm giá</div>
                <!-- Product image-->
                <a asp-action="Details" asp-route-id="@item.MaMh">
                    <img class="card-img-top" src="images/products/@Html.DisplayFor(modelItem => item.HinhAnh)" alt="..." />
                </a>
                <!-- Product details-->
                <div class="card-body p-4">
                    <div class="text-center">
                        <!-- Product name-->
                        <a asp-action="Details" asp-route-id="@item.MaMh">
                            <h5 class="fw-bolder text-info">@Html.DisplayFor(modelItem => item.Ten)</h5>
                        </a>
                        <!-- Product reviews-->
                        <div class="d-flex justify-content-center small text-warning mb-2">
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star"></div>
                        </div>
                        <!-- Product price-->
                        <span class="text-muted text-decoration-line-through">@Html.DisplayFor(modelItem => item.GiaGoc)</span>
                        <span class="text-danger fw-bolder">@Html.DisplayFor(modelItem => item.GiaBan)</span>
                    </div>
                </div>
                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Customers"
                           asp-action="Details"
                           asp-route-id="@item.MaMh"
                           class="btn btn-outline-primary btn-sm">
                            Xem chi tiết
                        </a>

                        <a asp-controller="Customers"
                           asp-action="AddToCart"
                           asp-route-id="@item.MaMh"
                           class="btn btn-success btn-sm">
                            Mua hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
