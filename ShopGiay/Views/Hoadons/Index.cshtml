@model IEnumerable<ShopGiay.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<h2>Danh sách hóa đơn</h2>

<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Khách hàng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ngay?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.TongTien?.ToString("N0") đ</td>

                <td>
                    @switch (item.TrangThai)
                    {
                        case ShopGiay.Enums.Status.ChoXuLy:
                            <span class="badge bg-warning">Chờ xử lý</span>
                            ;
                            break;

                        case ShopGiay.Enums.Status.DaXacNhan:
                            <span class="badge bg-info text-dark">Đã xác nhận</span>
                            ;
                            break;

                        case ShopGiay.Enums.Status.DangGiaoHang:
                            <span class="badge bg-primary">Đang giao hàng</span>
                            ;
                            break;

                        case ShopGiay.Enums.Status.HoanThanh:
                            <span class="badge bg-success">Hoàn thành</span>
                            ;
                            break;

                        case ShopGiay.Enums.Status.DaHuy:
                            <span class="badge bg-danger">Đã hủy</span>
                            ;
                            break;
                    }
                </td>

                <td>@item.MaKhNavigation?.Ten</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.MaHd" class="btn btn-sm btn-info">Chi tiết</a>
                    @if (item.TrangThai == ShopGiay.Enums.Status.ChoXuLy)
                    {
                        <button class="btn btn-sm btn-success"
                                onclick="changeStatus(@item.MaHd, 1)">
                            Xác nhận
                        </button>

                        <button class="btn btn-sm btn-danger"
                                onclick="cancelOrder(@item.MaHd)">
                            Hủy
                        </button>
                    }
                    else if (item.TrangThai == ShopGiay.Enums.Status.DaXacNhan)
                    {
                        <button class="btn btn-sm btn-primary"
                                onclick="changeStatus(@item.MaHd, 2)">
                            Giao hàng
                        </button>

                        <button class="btn btn-sm btn-danger"
                                onclick="cancelOrder(@item.MaHd)">
                            Hủy
                        </button>
                    }
                    else if (item.TrangThai == ShopGiay.Enums.Status.DangGiaoHang)
                    {
                        <button class="btn btn-sm btn-success"
                                onclick="changeStatus(@item.MaHd, 3)">
                            Hoàn thành
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal xác nhận chuyển trạng thái -->
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fa fa-question-circle me-2"></i>
                    Xác nhận
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage" class="mb-0"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i> Hủy
                </button>
                <button type="button" class="btn btn-primary" id="confirmBtn">
                    <i class="fa fa-check me-1"></i> Xác nhận
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal nhập lý do hủy -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fa fa-ban me-2"></i>
                    Hủy đơn hàng
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label class="form-label fw-semibold">Lý do hủy đơn:</label>
                <textarea class="form-control" id="cancelReason" rows="3" placeholder="Nhập lý do hủy..."></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa fa-times me-1"></i> Đóng
                </button>
                <button type="button" class="btn btn-danger" id="cancelConfirmBtn">
                    <i class="fa fa-ban me-1"></i> Xác nhận hủy
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Alert Message Container -->
<div id="alertContainer" style="position: fixed; top: 80px; left: 50%; transform: translateX(-50%); z-index: 9999; width: 500px; max-width: 90%;"></div>

@section Scripts {
    <script>
        let currentOrderId = null;
        let currentStatus = null;

        // Hiển thị alert message
        function showAlert(message, isSuccess) {
            const alertType = isSuccess ? 'success' : 'danger';
            const icon = isSuccess ? 'check-circle' : 'exclamation-circle';

            const alertHtml = `
                <div class="alert alert-${alertType} alert-dismissible fade show shadow-lg" role="alert">
                    <i class="fa fa-${icon} me-2"></i>
                    <strong>${message}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

            const container = document.getElementById('alertContainer');
            container.innerHTML = alertHtml;

            // Tự động ẩn sau 4 giây
            setTimeout(() => {
                const alert = container.querySelector('.alert');
                if (alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 4000);
        }

        // Hiển thị modal xác nhận
        function changeStatus(orderId, status) {
            currentOrderId = orderId;
            currentStatus = status;

            const statusText = {
                1: 'xác nhận',
                2: 'chuyển sang giao hàng',
                3: 'hoàn thành'
            };

            document.getElementById('confirmMessage').textContent =
                `Bạn có chắc chắn muốn ${statusText[status]} đơn hàng này?`;

            const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
            modal.show();
        }

        // Xử lý khi nhấn nút xác nhận trong modal
        document.getElementById('confirmBtn').addEventListener('click', function () {
            const modal = bootstrap.Modal.getInstance(document.getElementById('confirmModal'));
            modal.hide();

            console.log('Changing status:', { orderId: currentOrderId, status: currentStatus });

            const token = document.querySelector("input[name='__RequestVerificationToken']").value;

            fetch('@Url.Action("ChangeStatus", "Hoadons")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${currentOrderId}&trangThai=${currentStatus}&__RequestVerificationToken=${encodeURIComponent(token)}`
            })
            .then(res => {
                console.log('Response status:', res.status);
                return res.json();
            })
            .then(data => {
                console.log('Response data:', data);
                showAlert(data.message, data.success);
                if (data.success) {
                    setTimeout(() => location.reload(), 1500);
                }
            })
            .catch(err => {
                console.error('Error:', err);
                showAlert('Có lỗi xảy ra: ' + err.message, false);
            });
        });

        // Hiển thị modal hủy đơn
        function cancelOrder(orderId) {
            currentOrderId = orderId;
            document.getElementById('cancelReason').value = '';

            const modal = new bootstrap.Modal(document.getElementById('cancelModal'));
            modal.show();
        }

        // Xử lý khi nhấn nút xác nhận hủy
        document.getElementById('cancelConfirmBtn').addEventListener('click', function () {
            const reason = document.getElementById('cancelReason').value.trim();

            if (!reason) {
                showAlert('Vui lòng nhập lý do hủy đơn!', false);
                return;
            }

            const modal = bootstrap.Modal.getInstance(document.getElementById('cancelModal'));
            modal.hide();

            console.log('Canceling order:', { orderId: currentOrderId, reason });

            const token = document.querySelector("input[name='__RequestVerificationToken']").value;

            fetch('@Url.Action("CancelOrder", "Hoadons")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${currentOrderId}&reason=${encodeURIComponent(reason)}&__RequestVerificationToken=${encodeURIComponent(token)}`
            })
            .then(res => {
                console.log('Response status:', res.status);
                return res.json();
            })
            .then(data => {
                console.log('Response data:', data);
                showAlert(data.message, data.success);
                if (data.success) {
                    setTimeout(() => location.reload(), 1500);
                }
            })
            .catch(err => {
                console.error('Error:', err);
                showAlert('Có lỗi xảy ra: ' + err.message, false);
            });
        });
    </script>
}
