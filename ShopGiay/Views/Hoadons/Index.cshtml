@model IEnumerable<ShopGiay.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<h2>Danh sách hóa đơn</h2>

<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Khách hàng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ngay?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.TongTien?.ToString("N0") đ</td>

                <td>
                    @switch (item.TrangThai)
                    {
                        case ShopGiay.Enums.Status.ChoXuLy:
                            <span class="badge bg-warning">Chờ xử lý</span>
                            ;
                            break;

                        case ShopGiay.Enums.Status.DaXacNhan:
                            <span class="badge bg-info text-dark">Đã xác nhận</span>
                            ;
                            break;

                        case ShopGiay.Enums.Status.DangGiaoHang:
                            <span class="badge bg-primary">Đang giao hàng</span>
                            ;
                            break;

                        case ShopGiay.Enums.Status.HoanThanh:
                            <span class="badge bg-success">Hoàn thành</span>
                            ;
                            break;

                        case ShopGiay.Enums.Status.DaHuy:
                            <span class="badge bg-danger">Đã hủy</span>
                            ;
                            break;
                    }
                </td>

                <td>@item.MaKhNavigation?.Ten</td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.MaHd" class="btn btn-sm btn-info">Chi tiết</a>

                    @* ===========================
                       NÚT CHUYỂN TRẠNG THÁI
                       =========================== *@
                    @if (item.TrangThai == ShopGiay.Enums.Status.ChoXuLy)
                    {
                        <button class="btn btn-sm btn-success"
                                onclick="changeStatus(@item.MaHd, 1)">
                            Xác nhận
                        </button>

                        <button class="btn btn-sm btn-danger"
                                onclick="cancelOrder(@item.MaHd)">
                            Hủy
                        </button>
                    }
                    else if (item.TrangThai == ShopGiay.Enums.Status.DaXacNhan)
                    {
                        <button class="btn btn-sm btn-primary"
                                onclick="changeStatus(@item.MaHd, 2)">
                            Giao hàng
                        </button>

                        <button class="btn btn-sm btn-danger"
                                onclick="cancelOrder(@item.MaHd)">
                            Hủy
                        </button>
                    }
                    else if (item.TrangThai == ShopGiay.Enums.Status.DangGiaoHang)
                    {
                        <button class="btn btn-sm btn-success"
                                onclick="changeStatus(@item.MaHd, 3)">
                            Hoàn thành
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">
                <i class="fa fa-check-circle me-2"></i>
                <span id="successMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body">
                <i class="fa fa-exclamation-circle me-2"></i>
                <span id="errorMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showToast(message, isSuccess) {
            const toastId = isSuccess ? 'successToast' : 'errorToast';
            const messageId = isSuccess ? 'successMessage' : 'errorMessage';

            document.getElementById(messageId).textContent = message;
            const toast = new bootstrap.Toast(document.getElementById(toastId));
            toast.show();
        }

        function changeStatus(orderId, status) {
            if (!confirm("Bạn chắc chắn muốn đổi trạng thái?")) return;

            console.log('Changing status:', { orderId, status });

            const token = document.querySelector("input[name='__RequestVerificationToken']").value;

            fetch('@Url.Action("ChangeStatus", "Hoadons")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${orderId}&trangThai=${status}&__RequestVerificationToken=${encodeURIComponent(token)}`
            })
            .then(res => {
                console.log('Response status:', res.status);
                return res.json();
            })
            .then(data => {
                console.log('Response data:', data);
                showToast(data.message, data.success);
                if (data.success) {
                    setTimeout(() => location.reload(), 1500);
                }
            })
            .catch(err => {
                console.error('Error:', err);
                showToast('Có lỗi xảy ra: ' + err.message, false);
            });
        }

        function cancelOrder(orderId) {
            const reason = prompt("Nhập lý do hủy:");
            if (!reason) return;

            console.log('Canceling order:', { orderId, reason });

            const token = document.querySelector("input[name='__RequestVerificationToken']").value;

            fetch('@Url.Action("CancelOrder", "Hoadons")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${orderId}&reason=${encodeURIComponent(reason)}&__RequestVerificationToken=${encodeURIComponent(token)}`
            })
            .then(res => {
                console.log('Response status:', res.status);
                return res.json();
            })
            .then(data => {
                console.log('Response data:', data);
                showToast(data.message, data.success);
                if (data.success) {
                    setTimeout(() => location.reload(), 1500);
                }
            })
            .catch(err => {
                console.error('Error:', err);
                showToast('Có lỗi xảy ra: ' + err.message, false);
            });
        }
    </script>
}
