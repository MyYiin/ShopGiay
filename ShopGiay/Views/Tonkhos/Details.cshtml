@model ShopGiay.Models.Tonkho

@{
    ViewData["Title"] = "Chi Tiết Tồn Kho SKU: " + Model.Sku;
    Layout = "_LayoutAdmin";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary">🔍 Chi Tiết Tồn Kho</h2>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="bi bi-box-seam me-2"></i> SKU:
                <strong class="text-warning">@Model.Sku</strong>
            </h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">

                @* --- THÔNG TIN SẢN PHẨM --- *@
                <h4 class="mt-3 mb-3 border-bottom pb-2 text-info">Thông Tin Sản Phẩm</h4>

                <dt class="col-sm-3">Tên Sản Phẩm:</dt>
                <dd class="col-sm-9">
                    <span class="fs-5 fw-bold">@Model.MaMhNavigation?.Ten</span>
                    <span class="text-muted small">(Mã MH: @Model.MaMhNavigation?.MaMh)</span>
                </dd>

                <dt class="col-sm-3">Màu Sắc:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary fs-6">@Model.MaMsNavigation?.Ten</span>
                    <span class="text-muted small">(Mã MS: @Model.MaMsNavigation?.MaMs)</span>
                </dd>

                <dt class="col-sm-3">Kích Cỡ (Size):</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary fs-6">@Model.MaKcNavigation?.GiaTriKc</span>
                    <span class="text-muted small">(Mã KC: @Model.MaKcNavigation?.MaKc)</span>
                </dd>

                @* --- THÔNG TIN TỒN KHO & GIÁ --- *@
                <h4 class="mt-4 mb-3 border-bottom pb-2 text-info">Thông Tin Tồn Kho & Giá</h4>

                <dt class="col-sm-3">Số Lượng Tồn Kho:</dt>
                <dd class="col-sm-9">
                    <span class="fs-5 fw-bold @(Model.SoLuongTonKho <= 5 ? "text-danger" : "text-success")">
                        @Html.DisplayFor(model => model.SoLuongTonKho)
                    </span>
                    <span class="text-muted">sản phẩm</span>
                </dd>

                <dt class="col-sm-3">Giá Gốc (Nhập):</dt>
                <dd class="col-sm-9">
                    <span class="fs-5 text-secondary">
                        @Model.GiaGocBt?.ToString("N0") VNĐ
                    </span>
                </dd>

                <dt class="col-sm-3">Giá Bán (Retail):</dt>
                <dd class="col-sm-9">
                    <span class="fs-5 fw-bold text-danger">
                        @Model.GiaBanBt?.ToString("N0") VNĐ
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    @* --- THAO TÁC --- *@
    <div class="mt-4 pb-4">
        <a asp-action="Edit" asp-route-id="@Model?.MaK" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square me-1"></i> Chỉnh Sửa
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay Lại Danh Sách
        </a>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">