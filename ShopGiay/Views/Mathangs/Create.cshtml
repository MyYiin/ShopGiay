@model ShopGiay.Models.Mathang

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutAdmin";
}
<div class="container-fluid px-4">
    <h2 class="mt-4">Thêm sản phẩm</h2>
    <div class="card shadow-sm mt-3">
        <div class="card-body">

            <form asp-action="Create" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Ten" class="form-label fw-semibold">Tên sản phẩm</label>
                    <input asp-for="Ten" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="Ten" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label fw-semibold">Mô tả</label>
                    <input asp-for="MoTa" class="form-control" placeholder="Nhập mô tả" />
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="GiaGoc" class="form-label fw-semibold">Giá gốc</label>
                        <input asp-for="GiaGoc" class="form-control" type="number" placeholder="Nhập giá gốc" />
                        <span asp-validation-for="GiaGoc" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="GiaBan" class="form-label fw-semibold">Giá bán</label>
                        <input asp-for="GiaBan" class="form-control" type="number" placeholder="Nhập giá bán" />
                        <span asp-validation-for="GiaBan" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaLg" class="form-label fw-semibold">Loại giày</label>
                        <select asp-for="MaLg" class="form-select" asp-items="ViewBag.MaLg"></select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="MaTh" class="form-label fw-semibold">Thương hiệu</label>
                        <select asp-for="MaTh" class="form-select" asp-items="ViewBag.MaTh"></select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Hình ảnh</label>
                    <input type="file" name="HinhAnh" class="form-control" accept="image/*" />
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Lưu sản phẩm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
