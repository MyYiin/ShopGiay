@{
    // 1. Lấy tên Action hiện tại để kiểm tra Trang Chủ và Active Menu
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();

    // 2. Lấy trạng thái đăng nhập khách hàng từ Session
    var customerEmail = Context.Session.GetString("khachhang");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cửa hàng Giày MYiin - An Giang</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* CSS tuỳ chỉnh để đảm bảo màu trắng/sáng trên nền đen của Navbar */
        .navbar-nav .nav-item .nav-link {
            font-weight: 500;
            color: rgba(255, 255, 255, 0.75) !important; /* Trắng mờ mặc định */
            transition: color 0.15s ease-in-out;
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #fff !important; /* Trắng tinh khi hover */
            }
        /* Style cho Navbar khi Active */
        .navbar-nav .nav-item .active {
            font-weight: 700;
            color: #fff !important; /* Trắng tinh khi active */
            border-bottom: 2px solid #fff; /* Border trắng */
        }
        /* Chỉnh lại màu nút Đăng nhập để nổi bật trên nền đen */
        .btn-outline-dark {
            --bs-btn-color: #fff;
            --bs-btn-border-color: #fff;
            --bs-btn-hover-bg: #fff;
            --bs-btn-hover-color: #000;
        }
    </style>
</head>

<body>
    <a name="top"></a>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow sticky-top">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand text-white fw-bolder fs-4" asp-controller="Customers" asp-action="Index"><i class="bi bi-shop-window me-1"></i> Shop MYiin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">
                        <a class="nav-link @(actionName == "Index" ? "active" : "")" asp-controller="Customers" asp-action="Index">Trang chính</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(actionName == "About" ? "active" : "")" asp-controller="Customers" asp-action="About">
                            Giới thiệu
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-tags me-1"></i> Loại giày
                        </a>
                        <ul class="dropdown-menu">
                            @await Component.InvokeAsync("LoaiGiay")
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-bookmark-star me-1"></i> Thương hiệu
                        </a>
                        <ul class="dropdown-menu">
                            @await Component.InvokeAsync("ThuongHieu")
                        </ul>
                    </li>
                    @if (!string.IsNullOrEmpty(customerEmail))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(actionName == "CustomerInfo" ? "active" : "")" asp-controller="Customers" asp-action="CustomerInfo">
                                <i class="bi bi-clock-history me-1"></i> Lịch sử mua hàng
                            </a>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(customerEmail))
                    {
                        <div class="dropdown me-3">
                            <button class="btn btn-warning dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @customerEmail
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Customers" asp-action="CustomerInfo"><i class="bi bi-clock-history"></i> Lịch sử mua hàng</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Customers" asp-action="Signout"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Customers" asp-action="Login" class="btn btn-outline-dark me-3">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                        </a>
                    }

                    @* --- GIỎ HÀNG (SẼ CHẶN KHI VÀO) --- *@
                    <a asp-controller="Customers" asp-action="ViewCart" class="btn btn-outline-dark position-relative">
                        <i class="bi bi-cart-fill"></i> Giỏ hàng
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @(ViewData["SoLuong"] ?? 0)
                            <span class="visually-hidden">sản phẩm trong giỏ</span>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    @if (actionName == "Index")
    {
        <div id="demo" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="3"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/carousel/c1.png" class="d-block w-100" alt="Banner 1">
                </div>
                <div class="carousel-item">
                    <img src="~/images/carousel/c2.png" class="d-block w-100" alt="Banner 2">
                </div>
                <div class="carousel-item">
                    <img src="~/images/carousel/c3.png" class="d-block w-100" alt="Banner 3">
                </div>
                <div class="carousel-item">
                    <img src="~/images/carousel/c4.png" class="d-block w-100" alt="Banner 4">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    }

    @* --- VÙNG HIỂN THỊ NỘI DUNG CHÍNH (RENDER BODY) --- *@
    <div class="container mt-5 mb-5">
        @* Hiển thị thông báo TempData nếu có *@
        @if (TempData["AlertMessage"] != null)
        {
            var alertType = TempData["AlertType"]?.ToString() ?? "info";
            <div class="alert alert-@alertType alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @TempData["AlertMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </div>

    @* --- FOOTER --- *@
    <footer class="pt-5 bg-dark">
        <div class="text-center mb-5"><a class="text-warning" href="#top"><i class="bi bi-chevron-up" style="font-size: 2.5rem;"></i></a></div>

        <div class="container">
            <div class="row">
                <div class="col-md-6 text-light mb-4">
                    <h4><i class="bi bi-geo-alt-fill me-2"></i> Shop MYiin - Cửa hàng Giày Việt An Giang</h4>
                    <p class="m-0"><i class="bi bi-house-door-fill me-2"></i> Địa chỉ: Bình Thạnh, Châu Thành An Giang</p>
                    <p class="m-0"><i class="bi bi-telephone-fill me-2"></i> Điện thoại: 0869211754</p>
                    <p class="m-0"><i class="bi bi-envelope-fill me-2"></i> Email: Myiin@gmail.com</p>
                </div>

                <div class="col-md-3 text-muted mb-4">
                    <h5 class="fw-bold text-white">DANH MỤC HÀNG</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none">Giày Thể Thao</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Giày Công Sở</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Giày Nữ</a></li>
                    </ul>
                </div>

                <div class="col-md-3 text-muted mb-4">
                    <h5 class="fw-bold text-white">DỊCH VỤ KHÁCH HÀNG</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none">Hướng dẫn mua hàng</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Câu hỏi thường gặp</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Chính sách bảo hành</a></li>
                    </ul>
                </div>
            </div>
            <hr class="text-white-50">
            <p class="m-0 py-3 text-center text-secondary fw-bold">Copyright &copy; Shop MYiin 2025</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>